<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardVg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDataMiinhasViagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="7 de Abril 2018"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/txtPrecoMinhasViagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:text="1,50"
                android:textAlignment="textEnd"
                android:textColor="@color/colorText"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHoraMinhasViagens"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="10:30"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:paddingLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPartidaMinhasViagens"
                android:layout_width="33dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:drawableRight="@drawable/ic_redo"

                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:text="RECIFE"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtChegadaMinhasViagens"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="OLINDA"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/txtTotalLugViagem"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="4 lugares"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtLugViagemReservada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="2 livres"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@drawable/custom_background"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_down"
            android:paddingRight="20dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="RESERVAS"
            android:textColor="@color/colorSelect"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            />

        <LinearLayout
            android:id="@+id/linearPassageiros"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>