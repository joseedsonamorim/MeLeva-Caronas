<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:minHeight="95dp"
    android:theme="@style/AppTheme"
    tools:context="com.meleva.HomeActivity"
    tools:layout_editor_absoluteY="81dp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_header"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ME LEVA"
        android:fontFamily="@font/sara"
        android:textColor="@color/colorSelect"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:background="@drawable/custom_header1"
        android:textAlignment="gravity"
        app:itemIconTint="@animator/bottom_nav_color"
        app:itemTextColor="@animator/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:background="@drawable/custom_background"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:text="DE"
                    android:textColor="@color/colorSelect"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtPartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_lupa"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="LOCAL DE PARTIDA"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:text="PARA"
                    android:textColor="@color/colorSelect"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtChegada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_lupa"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="LOCAL DE CHEGADA"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="DATA"
                    android:textColor="@color/colorSelect"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_calendar"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="DD/MM/AAAA"
                    android:inputType="date"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="HORA"
                    android:textColor="@color/colorSelect"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/ic_clock"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="HH:MM"
                    android:inputType="time"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="PREÇO"
                    android:textColor="@color/colorSelect"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtPrecoCriarViagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorApp"
                    android:drawableBottom="@color/colorApp"
                    android:drawableTint="@color/colorApp"
                    android:ems="10"
                    android:hint="PREÇO (REAIS)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorApp"
                    android:textColorHighlight="@color/colorApp"
                    android:textColorHint="@color/placeholderColor"
                    android:textColorLink="@color/colorApp"
                    android:textCursorDrawable="@color/colorApp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:text="LUGARES"
                    android:textColor="@color/colorSelect"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <SeekBar
                    android:id="@+id/seekbarLugaresLivres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@animator/seekbar"
                    android:max="8"
                    android:min="1"
                    android:secondaryProgressTint="@animator/seekbar"
                    android:thumbTint="@animator/seekbar" />

                <TextView
                    android:id="@+id/txtlugaresCriarViagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorSelect"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnCriarViagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_button"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:inputType="textCapSentences"
        android:onClick="clickCriarViagem"
        android:text="Registar Viagem"
        android:textColor="@color/colorSelect"
        android:textSize="20dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        />
</android.support.constraint.ConstraintLayout>

